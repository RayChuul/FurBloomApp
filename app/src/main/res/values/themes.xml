<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- FIXED: Changed parent theme to one with no default action bar -->
    <style name="Theme.FurBloomAppMSD" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Your existing CuteCheckBox style remains here -->
    <style name="CuteCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorAccent">#C58ECF</item> <!-- Color when checked -->
        <item name="android:textColorSecondary">#E1BEE7</item> <!-- Color when unchecked -->
    </style>
</resources>
