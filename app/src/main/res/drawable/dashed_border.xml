<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- A very light, almost white-pink for the background of the card -->
    <solid android:color="#FDF6F8" />

    <!-- The same corner radius as your other pet cards -->
    <corners android:radius="24dp" />

    <!-- The dashed stroke -->
    <stroke
        android:width="4dp"
        android:color="#E1BEE7"
        android:dashWidth="20px"
        android:dashGap="12px" />
</shape>
