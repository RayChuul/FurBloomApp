<?xml version="1.0" encoding="utf-8"?>
<!-- FIXED: Changed to LinearLayout and added Toolbar -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF0F5">

    <include layout="@layout/custom_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingBottom="40dp">

            <!-- Photo -->
            <ImageView
                android:id="@+id/ivPetPhoto"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/rounded_image_mask"
                android:contentDescription="Pet Photo"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_pet_placeholder" />

            <Button
                android:id="@+id/btnChoosePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Choose Photo" />

            <!-- Name (Required) -->
            <EditText
                android:id="@+id/etPetName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Pet Name *"
                android:inputType="textCapWords"/>

            <!-- FIXED: Replaced EditText for age with a Button for birth date -->
            <Button
                android:id="@+id/btnSetBirthDate"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Set Birth Date (Optional)" />

            <!-- Species -->
            <EditText
                android:id="@+id/etPetSpecies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Species (Dog, Cat...)"
                android:inputType="textCapWords"/>

            <!-- Replaced EditText with Spinner for Gender -->
            <Spinner
                android:id="@+id/spinnerPetGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="10dp"
                style="@style/Widget.AppCompat.Spinner.Underlined"/>

            <!-- Medical History -->
            <EditText
                android:id="@+id/etMedicalHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:hint="Medical History"
                android:minLines="3"
                android:inputType="textCapSentences|textMultiLine"/>

            <!-- Notes -->
            <EditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:hint="Notes"
                android:minLines="3"
                android:inputType="textCapSentences|textMultiLine"/>

            <Button
                android:id="@+id/btnSavePet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Save Pet" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
