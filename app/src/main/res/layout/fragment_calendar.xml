<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- FIXED: Replaced TextView with the CalendarView -->
    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headerColor="@color/purple_500"
        app:todayLabelColor="@color/purple_700"
        app:selectionColor="@color/purple_200" />

    <!-- This will show the reminders for the selected day -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_calendar_reminders"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"/>

</LinearLayout>
